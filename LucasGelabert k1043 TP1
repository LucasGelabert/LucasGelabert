#include <iostream>

using namespace std;

void mostrarvec(int vec[], int dim)
{
        for (int i = 0; i < dim; ++i)
                cout << vec[i] << '\t';
        cout << endl;
}

void mostrarmat(int m[][5], int dfil)
{
        const int dcol = 5; // solo por prolijidad

        for (int i = 0; i < dfil; ++i) {
                for (int j = 0; j < dcol; ++j)
                        cout << m[i][j] << '\t';
                cout << endl;
        }

}
void invertvec(int vec[],int C){
        int save;
        int j=C-1;
        for(int i=0;i<(C/2);i++){

                save=vec[i];
                vec[i]=vec[j];
                vec[j]=save;
                j=j-1;

                }
        }
void invertmat(int mat[][5],int C) {
            const int V = 5;
            int v = 0;
            int c = 0;
            int vech[C];
            int vecv[V];
            int j=0;
            int i=j;
    
            while(v!=5) {
    
            for ( i ; i < C; i++) {
                    vech[i] = mat[v][i];
            }
            i=j;

            for ( i ; i < C; i++) {
                    vecv[i] = mat[i][c];
            }
            i=j;

            for ( i ; i < C; i++) {
                    mat[v][i] = vecv[i];
            }
           i=j;

            for ( i; i < C; i++) {
                    mat[i][c] = vech[i];
            }
            i=j;
            v=v+1;
            c=c+1;
            j=j+1;
        }
}
int main()
{
        const int dim5 {5};
        const int dim10 {10};

        int vec5[dim5] {4, 11, 19, 8, 3};
        int vec10[dim10] {23, 15, 1, 7, 6, 27, 2, 14, 12, 9};

        int matriz[dim5][dim5] {36, 7, 19, 28, 45,
                                17, 33, 42, 3, 25,
                                22, 41, 32, 11, 9,
                                39, 47, 14, 4, 23,
                                16, 38, 8, 27, 44};

        cout<<"\n"<<endl;
        cout<<"el vector vec5: "<<"\n"<<endl;

        mostrarvec(vec5, dim5);
        cout<<"\n"<<endl;

        invertvec (vec5, dim5);
        cout<<"el vector vec5 invertido: "<<"\n"<<endl;

        mostrarvec(vec5, dim5);
        cout<<"\n"<<endl;

        cout<<"-----------------------------------------------------------------------------------"<<endl;

        cout<<"\n"<<endl;
        cout<<"el vector vec10: "<<"\n"<<endl;

        mostrarvec(vec10, dim10);
        cout<<"\n"<<endl;

        invertvec(vec10, dim10);
        cout<<"el vector vec10 invertido: "<<"\n"<<endl;

        mostrarvec(vec10, dim10);
        cout<<"\n"<<endl;

        cout<<"-----------------------------------------------------------------------------------"<<endl;

        cout<<"\n"<<endl;
        cout<<"la matriz: "<<"\n"<<endl;

        mostrarmat(matriz, dim5);
        cout<<"\n"<<endl;

        invertmat(matriz,dim5);

        cout<<"\n"<<endl;
        cout<<"la matriz transpuesta: "<<"\n"<<endl;

        mostrarmat(matriz,dim5);
        cout<<"\n"<<endl;
        return 0;
}
